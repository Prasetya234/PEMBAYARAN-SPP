<body>
     <nav class="navbar navbar-light bg-dark">
<a href="/pembayaran">INPUT PEMBAYARAN</a>
  <a href="/data">DATA PEMBAYARAN</a>
  <a href="/logout">LOG OUT</a>
  <form class="form-inline">
    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
  </form>
</nav>
<br><br><br>
    <center>
    <h2>DATA PEMBAYARAN</h2>
    </center>
    <br><br>
     <table class="table table-hover">
        <thead>
            <tr class="bg-danger"> 
                <th>id_pembayaran</th>
                <th>siswa</th>
                <th>bulan</th>
                <th>jumlah</th>
                <th>tanggal_transaksi</th>
                <th>DELETE</th>
            </tr>
        </thead>
        <tbody class="table table-active">
            {{#each data}}
            <tr>
                <td>{{ id_pembayaran }}</td>
                <td>{{ siswa }}</td>
                <td>{{ bulan }}</td>
                <td>{{ jumlah }}</td>
                <td>{{ tangggal_transaksi }}</td>
                <td><a href="/hapus-id_pembayaran/{{ id_pembayaran }}"><button type="button" class="btn btn-danger">hapus</button></a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>

<a href="/pembayaran" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Primary link</a>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
